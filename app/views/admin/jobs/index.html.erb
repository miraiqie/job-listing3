<div class="col-md-12">
  <%= link_to("Add a job", new_admin_job_path, class: "btn btn-primary pull-right") %>

  <table class="table table-havor">
    <thead>
      <tr>
        <td>职位</td>
        <td> </td>
        <td>发布时间</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, admin_job_path(job)) %></td>
          <td>
              <%= link_to("Edit", edit_admin_job_path(job)) %> |
              <%= link_to("Delete", admin_job_path(job), method: :delete, :data => { :confirm => "Are You sure?"}) %>
          </td>
          <td><%= job.updated_at %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

</div>
